<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cw">
        <activity
            android:name=".view.DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard_anctivity"
            android:theme="@style/Theme.Cw" />
        <activity
            android:name=".view.CardViewActivity"
            android:exported="true"
            android:label="@string/title_activity_card_view"
            android:theme="@style/Theme.Cw" />
        <activity
            android:name=".view.CardActivity"
            android:exported="true"
            android:label="@string/title_activity_card"
            android:theme="@style/Theme.Cw" />
        <activity
            android:name=".view.UserRegistrationActivity"
            android:exported="true"
            android:label="@string/title_activity_signup"
            android:theme="@style/Theme.Cw" />
        <activity
            android:name=".view.SigninActivity"
            android:exported="true"
            android:label="@string/title_activity_signin"
            android:theme="@style/Theme.Cw">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SpotifyActivity"
            android:exported="true"
            android:label="@string/title_activity_spotify"
            android:theme="@style/Theme.Cw">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_profile_acitivity"
            android:theme="@style/Theme.Cw">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cw">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>